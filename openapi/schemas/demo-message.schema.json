{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/demo-message.schema.json",
  "title": "DemoMessage",
  "type": "object",
  "required": ["id", "text", "createdAt"],
  "properties": {
    "id": { "type": "integer", "format": "int64" },
    "text": { "type": "string", "description": "Plain or empty text" },
    "createdAt": { "type": "string", "format": "date-time" },
    "dateOnly": { "type": "string", "format": "date" },
    "active": { "type": ["boolean", "null"] },
    "price": { "type": "number", "format": "double" },
    "ratio": { "type": "number", "format": "float" },
    "uuid": { "type": "string", "format": "uuid" },
    "category": { "type": "string", "enum": ["A", "B", "C", "D"] },
    "meta": {
      "type": "object",
      "properties": {
        "locale": { "type": "string" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "metrics": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        }
      }
    },
    "items": {
      "type": "array",
      "items": { "$ref": "./item.schema.json" }
    },
    "binaryData": { "type": "string", "format": "binary" },
    "notes": {
      "oneOf": [
        { "type": "string" },
        { "type": "null" },
        {
          "type": "object",
          "properties": { "comment": { "type": "string" } }
        }
      ]
    },
    "class": { "type": "string" },
    "display-name": { "type": "string" },
    "with space": { "type": "string" },
    "snake_case": { "type": "string" },
    "camelCase": { "type": "string" }
  },
  "additionalProperties": false
}
